# Trail Tail Environment Configuration
# Copy this file to .env and update values for your environment

#######################
# Core Configuration #
#######################

# Environment type: development, staging, production
ENVIRONMENT=development

# Debug mode
DEBUG=true

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=DEBUG

# Log file path (leave empty to disable file logging)
LOG_FILE=logs/app.log

####################
# API Configuration #
####################

# API host and port
HOST=0.0.0.0
PORT=8000

# API version
VERSION=0.1.0

# Production mode
PRODUCTION=false

#######################
# Security Settings #
#######################

# Secret key for token signing (generate a secure key for production)
SECRET_KEY=your-secret-key-here

# Token expiration time in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
CORS_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_HEADERS=["Content-Type", "Authorization", "X-Client-ID"]

#####################
# Provider Settings #
#####################

# Enable mock providers for development
ENABLE_MOCK_PROVIDERS=true

# Feature flags
ENABLE_ANALYTICS=false
ENABLE_SOCIAL_FEATURES=true
ENABLE_PARENTAL_CONTROLS=true
